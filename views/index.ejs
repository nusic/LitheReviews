<!DOCTYPE html>
<html>
  <head>
  	<meta charset="UTF-8">
    <title>Liu Reviews </title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="css/style.css">

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.5/d3.min.js"></script>
		<script src="angularApp.js"></script>

		<style> .glyphicon-thumbs-up { cursor:pointer } </style>
  </head>

  <body ng-app="myApp">
  	<div class="row">
  		<div class="col-md-8 col-md-offset-2">
  			<ui-view></ui-view>
  		</div>
  	</div>

    <!-- INDEX template -->
    <script type="text/ng-template" id="/index.html">
    	<div class="page-header">
    		<h1>
        <img class="spy-img" src="imgs/spy.png" width="50px;">
        &nbsp;Liu Course Reviews
        </h1>
    	</div>


    	<div ng-repeat="course in courses | orderBy: '-year +code'" style="padding: 5px; margin-bottom: 10px;">
    		<a href="#/courses/{{course._id}}">
	    		<span style="font-size:20px; margin-left:10px;">
	    			{{course.code}}, {{course.year}}
	    		</span>
          <p style="font-size:15px; margin-left:10px;">
            {{course.title}}
          </p>
          <p class="text-right" style="margin-top: -40px;font-size:17px;" ng-show="{{course.satisfactionPercentage}}">
          <span style="color: #2c2; font-size: 20px">
            ☺ {{course.satisfactionPercentage}}%
          </span>
        </p>
				</a>

    		
    	</div>
    </script>


    <script type="text/ng-template" id="/courses.html">
      <div class="page-header">
        <h1>
          <img class="spy-img" src="imgs/spy.png" width="50px;">
          &nbsp;{{course.code}}, {{course.year}}
        </h1>
        <h3>{{course.title}}</h3>
        <small>{{course.prof}}, Block {{course.block}}, Nivå {{course.level}}, {{course.hp}}hp</small>

        <div ng-show="{{course.satisfactionPercentage}}"
          style="margin-top: 10px;"> 
          <span style="color: #2c2; font-size: 20px; margin-right: 20px;">
          ☺ {{satisfactionPercentage()}}%
          </span>
          
          <span style="color: #c22; font-size: 20px">
          ☹ {{100 - satisfactionPercentage()}}%
          </span>
        </div>
      </div>


      
      <div ng-repeat="exam in course.exams" class="chart">
        <d3-bars exam="exam">
      </div>
      <small style="display: inline-block; width: 60px;">Betyg som registrerats år {{course.year}}.</small>
      <p ng-hide="course.exams.length">
        Ingen statistik
      </p>

      <div style="clear: both;">
        <hr>

        <!-- COMMENT SECTION -->
        <table id="comment-section">
        <p ng-hide="course.reviews.length">
          Ingen har skrivit något än...
        </p>
          <tr ng-repeat="(i, review) in course.reviews | orderBy: '-upvotes'" class="comment">
          <td style="width: 65px;">
            <span style="color: #{{review.positive ? '2c2' : 'c22'}};">
              <span style="font-size: 20px;">
                <img src="imgs/icon_{{review.positive ? 'happy' : 'sad'}}.png" width="20px;">
              </span>
            </span>
            <span>{{review.upvotes}}</span>
            <a ng-click="incrementUpvotes(review)" ng-hide="review.voted">+1</a>
          </td>
          <td>
            <p>
            {{review.body}}
            </p>
          </td>
        </table>

        <br>

        <div my-review-form></div>
      </div>

    </script>
   

    
    <script src="js/controllers/mainController.js"></script>
    <script src="js/controllers/courseController.js"></script>
    <script src="js/factories/courses.js"></script>
    <script src="js/factories/d3.js"></script>
    <script src="js/directives/myReviewForm.js"></script>
    <script src="js/directives/d3-bars.js"></script>

  </body>
</html>
