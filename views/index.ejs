<!DOCTYPE html>
<html>
  <head>
  	<meta charset="UTF-8">
    <title>Liu Reviews</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="css/style.css">

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.5/d3.min.js"></script>
		<script src="angularApp.js"></script>

		<style> .glyphicon-thumbs-up { cursor:pointer } </style>
  </head>

  <body ng-app="myApp">
  	<div class="row">
  		<div class="col-md-8 col-md-offset-2">
  			<ui-view></ui-view>
  		</div>
  	</div>

    <!-- INDEX template -->
    <script type="text/ng-template" id="/index.html">
    	<div class="page-header">
    		<h1>Liu Course Reviews</h1>
    	</div>

    	<div ng-repeat="course in courses | orderBy: '-satisfactionPercentage'">
    		<a href="#/courses/{{course._id}}">
	    		<span style="font-size:20px; margin-left:10px;">
	    			{{course.code}} ({{course.year}})
	    		</span>
				</a>

    		<p class="text-right" style="margin-top: -25px;font-size:17px;">
	    		<span style="color: #2c2; font-size: 20px">
            ☺ {{course.satisfactionPercentage}}%
          </span>
    		</p>
    	</div>
    </script>


    <script type="text/ng-template" id="/courses.html">
      <div class="page-header">
        <h2>{{course.code}} ({{course.year}})</h2>
        <h4>{{course.title}}, {{course.prof}} </h4>
        <div ng-show="{{satisfactionPercentage()}}"> 
        <span style="color: #2c2; font-size: 20px; margin-right: 20px;">
          ☺ {{satisfactionPercentage()}}%
          </span>
          
          <span style="color: #c22; font-size: 20px">
          ☹ {{100 - satisfactionPercentage()}}%
          </span>
        </div>
      </div>


      <div ng-repeat="exam in course.exams" class="chart">
        <d3-bars exam="exam">        
      </div>


      <div ng-repeat="(i, review) in course.reviews | orderBy: '-upvotes'" 
        style="font-size: 13px; clear: both;">

        <!--// REVIEW TEMPLATE  -->
        <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(review)">
        </span>
      
        <span style="margin-right: 30px;">
          {{review.upvotes}} 
        </span>

        <span style="color: #{{review.positive ? '2c2' : 'c22'}};">
            <span style="font-size: 20px;">{{review.positive ? '☺' : '☹'}}</span> 
        </span>

        {{review.body}}

      </div>

      <br><br>

      <div my-review-form></div>

    </script>
   

    
    <script src="js/controllers/mainController.js"></script>
    <script src="js/controllers/courseController.js"></script>
    <script src="js/factories/courses.js"></script>
    <script src="js/factories/d3.js"></script>
    <script src="js/directives/myReviewForm.js"></script>
    <script src="js/directives/d3-bars.js"></script>

  </body>
</html>
