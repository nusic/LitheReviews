<!DOCTYPE html>
<html>
  <head>
  	<meta charset="UTF-8">
    <title>Liu Reviews </title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="css/style.css">

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular-animate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.5/d3.min.js"></script>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
		<script src="angularApp.js"></script>

		<style> .glyphicon-thumbs-up { cursor:pointer } </style>
  </head>

  <body ng-app="myApp">
  	<div class="row">
  		<div class="col-md-8 col-md-offset-2">
        <app-header></app-header>
        <ui-view></ui-view>
  		</div>
  	</div>

    <!-- INDEX template -->
    <script type="text/ng-template" id="/index.html">

    	<div ng-repeat="course in courses | orderBy: '-year +satisfactionPercentage +code'" style="padding: 5px; margin-bottom: 10px;">
    		<a href="#/courses/{{course._id}}">
	    		<span style="font-size:20px; margin-left:10px;">
	    			{{course.code}}, {{course.year}}
	    		</span>
          <p style="font-size:15px; margin-left:10px;">
            {{course.title}}
          </p>
          <p class="text-right" style="margin-top: -40px;font-size:17px;" ng-show="course.satisfactionPercentage !== undefined">
            <img ng-src="imgs/icon_happy.png" width="20px;" style="margin-top: -5px;">
            <span style="color: #2c2;">
              {{course.satisfactionPercentage}}%
            </span>
          </p>
          <p class="text-right" style="margin-top: -10px;" ng-show="course.reviews.length > 0">
          <small>
              {{course.reviews.length}} review{{course.reviews.length > 1 ? 's' : ''}}
            </small>
          </p>
				</a>
    	</div>
    </script>


    <script type="text/ng-template" id="/courses.html">

      <h3>{{course.code}}, {{course.year}}</h3>
      <h4>{{course.title}}</h4>
      <small>
        Med: {{course.prof}}, 
        <a href="http://kdb-5.liu.se/liu/lith/studiehandboken/svkursplan.lasso?&k_budget_year={{course.year}}&k_kurskod={{course.code}}" 
          target="_blank" style="color: lightgray; text-decoration: underline;">Studiehandboken</a>,
        <a href="{{course.courseSite}}" ng-show="course.courseSite !== undefined" target="_blank" style="color: lightgray; text-decoration: underline;">Kurssida</a>
      </small>

      <small ng-show="course.block !== '-' && false">
        <br>
        Period: {{course.period}},
        Block: {{course.block}},
        Nivå: {{course.level}}, 
        Omfattning: {{course.hp}}hp,
      </small>

      <div ng-show="course.satisfactionPercentage !== undefined" style="margin-top: 10px;"> 
        <span style="color: #2c2; font-size: 20px; margin-right: 20px;">
          <img ng-src="imgs/icon_happy.png" width="20px;" style="margin-top: -5px;">
          {{course.satisfactionPercentage}}%
        </span>
        
        <span style="color: #c22; font-size: 20px">
          <img ng-src="imgs/icon_sad.png" width="20px;" style="margin-top: -5px;">
          {{100 - course.satisfactionPercentage}}%
        </span>
      </div>
      <br><br>
      
      
      <div ng-repeat="exam in course.exams" class="chart">
        <d3-bars exam="exam" ng-show="exam.stats.length > 1 || true">
      </div>
      <p ng-hide="course.exams.length">
        Ingen statistik
      </p>


      <div style="clear: both;">
        <hr>

        <!-- COMMENT SECTION -->
        <table id="comment-section">
        <p ng-hide="course.reviews.length">
          Ingen har skrivit något än...
        </p>
          <tr ng-repeat="(i, review) in course.reviews | orderBy: '-upvotes'" class="comment">
          <td style="width: 65px;">
            <p>
              <img ng-src="imgs/icon_{{review.positive ? 'happy' : 'sad'}}.png" width="15px;" style="margin-top:-5px;">
              {{review.upvotes}}
              <span class="upvote" ng-click="incrementUpvotes(review)" ng-hide="review.voted"> </span>
            </p>
          </td>
          <td>
            <p>{{review.body}}</p>
          </td>
        </table>
        <table ng-show="loadingComment">
          <tr class="comment">
            <td style="width: 65px;"></td>
            <td>Loading ...</td>
          </tr>
        </table>
        <br>

        <div my-review-form id="commentForm"></div>
      </div>

    </script>
   

    
    <script src="js/controllers/mainController.js"></script>
    <script src="js/controllers/courseController.js"></script>
    <script src="js/factories/courses.js"></script>
    <script src="js/factories/d3.js"></script>
    <script src="js/directives/myReviewForm.js"></script>
    <script src="js/directives/d3-bars.js"></script>
    <script src="js/directives/appHeader.js"></script>

  </body>
</html>
